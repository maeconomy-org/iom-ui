# =============================================================================
# Deployment Environment Variables
# =============================================================================
# Copy this file to .env and configure for your VM

# =============================================================================
# Container Configuration
# =============================================================================
# GitHub org and app name (for image path)
GH_ORG=maeconomy-org
APP_NAME=iom-ui

# Environment name (used in container name)
ENVIRONMENT=prod

# Docker image tag: latest, main, dev, v1.0.0, sha-abc1234
IMAGE_TAG=latest

# Port to expose
PORT=3000

# Network name (if using external proxy network)
# NETWORK_NAME=proxy

# =============================================================================
# API Configuration (Runtime - different per VM)
# =============================================================================
BASE_API_URL=https://your-api-server:9443
UUID_API_URL=https://your-api-server:8443

# =============================================================================
# Certificate Configuration
# =============================================================================
CERTIFICATE_PATH="./certs/your-certificate.pem"
CERTIFICATE_PASSWORD="your-certificate-password"
VERIFY_CERTIFICATES=false

# =============================================================================
# HERE Maps API Key (Server-side only)
# =============================================================================
HERE_API_KEY=your-here-api-key

# =============================================================================
# Sentry Configuration
# =============================================================================
# DSN from Sentry project settings (use EU region for GDPR: ingest.de.sentry.io)
SENTRY_DSN=https://your-key@o123.ingest.de.sentry.io/456

# Organization and project slugs (for source map uploads during build)
SENTRY_ORG=your-organization-slug
SENTRY_PROJECT=your-project-name

# Enable/disable Sentry (set to "true" to enable in development for testing)
# In production (NODE_ENV=production), Sentry is always enabled if DSN is set
SENTRY_ENABLED=false

# Release version - helps track which deployment caused errors
SENTRY_RELEASE=1.0.0